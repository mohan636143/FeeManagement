<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="FeeManagement.Controls.Tile">
    <Grid.RowDefinitions>
        <RowDefinition Height="3*"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Image x:Name="tileImage" Grid.Row="0" Aspect="AspectFit" 
            HorizontalOptions="Center"/>
    <Label x:Name="tileText" Grid.Row="1" HorizontalOptions="Center" FontSize="Medium"/>
</Grid>
